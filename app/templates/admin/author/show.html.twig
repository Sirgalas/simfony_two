{% extends 'base_admin.html.twig' %}

{% block title %}{{ "Show Author"|trans }} {{ author.fullname }}{% endblock %}
{% block head  %}{{ "Show Author"|trans }} {{ author.fullname }}{% endblock %}
{% block breadcrumbs %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_author_index') }}">{{ 'Author'|trans }}</a>
    </li>
    <li class="breadcrumb-item active">{{ "Show"|trans }}</li>
{% endblock %}
{% block body %}
<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Quick Example</h3>
            <div class="card-tools">
                <div class="col-auto">
                    {{ include('admin/author/_delete_form.html.twig')  }}
                </div>
                <div class="col-auto">
                    <a href="{{ path('admin_author_edit', {'id': author.id}) }}" class="btn btn-primary">{{ "Edit"|trans }}</a>
                </div>
            </div>
        </div>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ author.id }}</td>
                </tr>
                <tr>
                    <th>Family</th>
                    <td>{{ author.Family }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ author.name }}</td>
                </tr>
                <tr>
                    <th>Patronic</th>
                    <td>{{ author.patronic }}</td>
                </tr>
                <tr>
                    <th>Biograpfy</th>
                    <td>{{ author.biograpfy|raw }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
