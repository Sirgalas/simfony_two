{% extends 'base.html.twig' %}

{% block title %}Hello basket!{% endblock %}

{% block body %}
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Shopping Cart</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="index.html">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Shopping Cart</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- cart-main-area start -->
<div class="cart-main-area section-padding--lg bg--white">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 ol-lg-12">
                <form action="#">
                    <div class="table-content wnro__table table-responsive">
                        <table>
                            <thead>
                            <tr class="title-top">
                                <th class="product-name">â„–</th>
                                <th class="product-name">{{ "Product"|trans }}</th>
                                <th class="product-price">{{ "Price"|trans }}</th>
                                <th class="product-quantity">{{ "Quantity"|trans }}</th>
                                <th class="product-subtotal">{{ "Total"|trans }}</th>
                                <th class="product-remove">{{ "Remove"|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for book in booksItems %}
                                <tr>
                                    <td class="product-name">{{ loop.index }}</td>
                                    <td class="product-name">{{ book['book'].title }}</td>
                                    <td class="product-price"><span class="amount">{{ book['book'].price }}</span></td>
                                    <td class="product-quantity"><input type="number" value="{{ book['quantity'] }}"></td>
                                    <td class="product-subtotal">{{ book['book'].price*book['quantity'] }}</td>
                                    <td class="product-remove"><a href="{{ path('basket_delete',{'id':book['book'].id}) }}">X</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-6">
                <div class="cartbox__total__area">
                    <div class="cartbox-total d-flex justify-content-between">
                        <ul class="cart__total__list">
                            <li>Cart total</li>
                            <li>Sub Total</li>
                        </ul>
                        <ul class="cart__total__tk">
                            <li>$70</li>
                            <li>$70</li>
                        </ul>
                    </div>
                    <a href="{{ path('orders_index') }}" class="cart__total__amount">
                        <span>Grand Total</span>
                        <span>$140</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- cart-main-area end -->
{% endblock %}
