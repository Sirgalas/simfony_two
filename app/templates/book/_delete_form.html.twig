<form method="post" action="{{ path('book_delete', {'book_id': book.bookId}) }}" onsubmit="return confirm({{ 'Are you sure you want to delete this item?'|trans }});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.bookId) }}">
    <button class="btn">{{ 'Delete'|trans }}</button>
</form>
